<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@drawable/zm" >

    <Button
        android:id="@+id/btn_open_rtsp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/rd_open_rtsp"
        />

    <Button
        android:id="@+id/btn_close_rtsp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/rd_close_rtsp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/text_rd_ip1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/text_rd_ip2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/text_rd_ip3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/text_rd_display1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/text_rd_display2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/text_rd_display3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>
