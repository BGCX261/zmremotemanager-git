<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/debug_inputname" />
    
    <EditText
        android:id="@+id/editText1"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:ems="10" >
 
        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText1"
        android:layout_below="@+id/editText1"
        android:layout_marginTop="49dp"
        android:text="@string/debug_install" />

    <Button
        android:id="@+id/button3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button4"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignRight="@+id/textView1"
        android:text="@string/debug_remove" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button4"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/button1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignRight="@+id/editText2"
        android:text="@string/debug_disable" />

    <Button
        android:id="@+id/button2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_marginRight="45dp"
        android:layout_toLeftOf="@+id/button1"
        android:text="@string/debug_enable" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button6"
        android:layout_alignLeft="@+id/button5"
        android:layout_marginBottom="18dp"
        android:text="@string/debug_querytext" />
    
    <Button
        android:id="@+id/button5"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button4"
        android:layout_below="@+id/button4"
        android:layout_marginTop="91dp"
        android:text="@string/debug_appinfo" />
    
    <Button
        android:id="@+id/button6"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button5"
        android:layout_alignLeft="@+id/button3"
        android:text="@string/debug_deviceinfo" />

    <Button
        android:id="@+id/button7"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button6"
        android:layout_alignLeft="@+id/button2"
        android:text="@string/debug_userinfo" />

    <Button
        android:id="@+id/button0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignParentBottom="true"
        android:text="@string/debug_deviceadmin" />

	<Button
	    android:id="@+id/button8"
	    android:layout_width="150dp"
	    android:layout_height="wrap_content"
	    android:layout_alignBaseline="@+id/button9"
	    android:layout_alignBottom="@+id/button9"
	    android:layout_alignLeft="@+id/textView3"
	    android:text="@string/debug_apptrace" />

	<TextView
	    android:id="@+id/textView3"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/button8"
	    android:layout_alignLeft="@+id/textView2"
	    android:layout_marginBottom="26dp"
	    android:text="@string/debug_queryReport" />

	<Button
	    android:id="@+id/button9"
	    android:layout_width="150dp"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_centerVertical="true"
	    android:text="@string/debug_appuntrace" />

	<Button
	    android:id="@+id/button10"
	    android:layout_width="150dp"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/textView4"
	    android:layout_below="@+id/textView4"
	    android:layout_marginTop="20dp"
	    android:text="@string/debug_policy" />

	<TextView
	    android:id="@+id/textView4"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/button8"
	    android:layout_below="@+id/button8"
	    android:layout_marginTop="100dp"
	    android:text="@string/debug_sendpolicy" />

	<Button
	    android:id="@+id/button11"
	    android:layout_width="150dp"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/button8"
	    android:layout_below="@+id/button8"
	    android:layout_marginTop="18dp"
	    android:text="@string/debug_postrace" />

	<Button
	    android:id="@+id/button12"
	    android:layout_width="150dp"
	    android:layout_height="wrap_content"
	    android:layout_alignBaseline="@+id/button11"
	    android:layout_alignBottom="@+id/button11"
	    android:layout_alignLeft="@+id/button9"
	    android:text="@string/debug_posuntrace" />
	
	<TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button8"
        android:layout_below="@+id/button12"
        android:layout_marginTop="150dp"
        android:text="@string/debug_uploadlogs" />

    <Button
        android:id="@+id/button13"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button8"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="18dp"
        android:text="@string/debug_logs" />
	
</RelativeLayout>
